# Server configuration
HOST=0.0.0.0                  # Bind to all interfaces
PORT=1337                    # Default Strapi port
PUBLIC_URL=                  # Optional: public-facing URL of the app (e.g. https://your-app.run.app)

# Security keys (GENERATE NEW ONES FOR PRODUCTION!)
APP_KEYS=                    # Comma-separated keys for signing sessions/cookies
API_TOKEN_SALT=              # Salt for hashing API tokens
ADMIN_JWT_SECRET=            # Secret for admin panel JWTs
TRANSFER_TOKEN_SALT=         # Salt for transfer tokens (optional)
ENCRYPTION_KEY=              # Encryption key (optional)

# Environment
NODE_ENV=production          # 'development' or 'production'

# Database (GCP Cloud SQL PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=/cloudsql/YOUR_PROJECT_ID:asia-east1:strapi
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=strapiGCPPassword123
DATABASE_SSL=false
DATABASE_SCHEMA=public

# Google Cloud Storage
BUCKET_NAME=YOUR_BUCKET_NAME
GCS_PUBLIC_FILES=true
GCS_UNIFORM=false
GCS_BASE_PATH=
GCS_BASE_URL=

# Google Cloud Storage Authentication
# GCP_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project",...}
# GCP_KEY_FILE=/path/to/service-account-key.json

# Optional: CDN URL if using Cloud CDN
# CDN_URL=https://your-cdn-domain.com